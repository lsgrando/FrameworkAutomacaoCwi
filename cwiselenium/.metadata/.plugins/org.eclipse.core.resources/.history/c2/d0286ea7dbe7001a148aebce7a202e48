package br.com.cwi.selenium.driver;

import java.net.MalformedURLException;
import java.net.URL;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.remote.RemoteWebDriver;

public class CwiSelenumRemoteDriver implements CwiSeleniumDriverLoader {

	
	private String host;
	private CwiSeleniumDesiredCapabilities dc;
	
	public CwiSelenumRemoteDriver(String host, CronosSeleniumDesiredCapabilities dc ) {
		
		this.host = host;
		this.CwiSeleniumDesiredCapabilities = dc;
	}
	
	@Override
    public WebDriver load() {

        try {

            return new RemoteWebDriver( new URL( host ), dc.load() );

        } catch ( MalformedURLException e ) {
            throw new IllegalArgumentException( "A url: " + host + " ï¿½ invalida", e );
        }
    }
}
